{% extends '@LAGAdmin/base.html.twig' %}

{% block page_title %}{{ parent() }} - {{ resource.title|trans }} - {{ operation.title|trans }}{% endblock %}

{% block title %}{{ resource.title|title }} - {{ operation.title|title }}{% endblock %}

{% block content %}
    <div class="admin-index admin-{{ resource.name }} admin-{{ operation.name }}">
        {% block form %}
            {{ form_start(form, {method: 'POST' in operation.methods ? 'POST': 'PUT'}) }}
                <div class="row">
                    {% for child in form.children %}
                        <div class="col-6">
                            {{ form_row(child) }}
                        </div>
                    {% endfor %}
                </div>

                {% block form_buttons %}
                    <div class="row">
                        <div class="col-3">
                            {% for action in operation.itemActions %}
                                {{ lag_admin_action(action, data) }}
                            {% endfor %}
                            <input type="submit"
                                   class="btn btn-primary"
                                   value="{{ 'lag_admin.ui.save'|trans({}, 'admin') }}"/>
                        </div>

                    </div>

                {% endblock %}

            {{ form_end(form) }}
        {% endblock %}
    </div>
{% endblock %}
