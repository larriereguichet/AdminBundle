{% if header.sortable %}
    {% set order = 'asc' %}

    {% if header.order|lower == 'asc' %}
        {% set order = 'desc' %}
    {% endif %}

    {# TODO keep the existing query ? #}
    <a href="?sort={{ header.name }}&order={{ order }}"
       class="text-dark">
        {{ header.label|trans({}, header.translationDomain) }}

        {% if header.sort == header.name %}
            {% if order == 'asc' %}
                <i class="bi bi-arrow-down sort-icon sort-asc"></i>
            {% else %}
                <i class="bi bi-arrow-up sort-icon sort-desc"></i>
            {% endif %}
        {% endif %}
    </a>
{% elseif header.label %}
    {{ header.label|trans({} , header.translationDomain) }}
{% endif %}
