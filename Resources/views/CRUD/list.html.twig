{% extends config.getParameter('base_template') %}

{% block topMenuItems %}
    {% block leftList %}
        {% include 'LAGAdminBundle:Action:customActions.html.twig' %}
    {% endblock %}
{% endblock %}

{% block content %}
    <h1 class="page-header">{{ admin.currentAction.title | trans }}</h1>

    {% block filters %}
        <div class="filters"></div>
    {% endblock %}

    <div class="{{ admin.name }}-list admin-list">
        {% if admin.entities | length > 0 %}

            {% set fields = admin.currentAction.fields %}

            {% spaceless %}
                {% if form is defined %}
                <form action="" method="post" class="selectable-list">

                    {% if form.batch_action is defined %}
                        <div class="row">
                            <div class="col-lg-2">
                                {{ form_widget(form.batch_action) }}
                            </div>
                            <div class="col-lg-2">
                                {{ form_widget(form.batch_submit) }}
                            </div>
                        </div>
                    {% endif %}
                {% endif %}

                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-sort">
                            <thead>
                            <tr>
                                {% if form is defined %}
                                    <th>
                                        {{ form_widget(form['select_all']) }}
                                    </th>
                                {% endif %}
                                {% for field in fields %}
                                    <th>
                                        {% set sortClass = getSortColumnIconClass(app.request.get('order'), field.name, app.request.get('sort')) %}

                                        <a href="{{ getSortColumnUrl(app.request, field.name) }}">
                                            {{ field_title(field.name, admin.name) }}<i class="{{ sortClass }}"></i>
                                        </a>
                                    </th>
                                {% endfor %}
                            </tr>
                            </thead>
                            <tbody>
                            {% for entity in admin.entities %}
                                <tr>
                                    {% if form is defined %}
                                        <td class="batch-column">
                                            {{ form_widget(form['batch_' ~ entity.id]) }}
                                        </td>
                                    {% endif %}
                                    {% for field in fields %}
                                        <td>{{ field(field, entity) | raw }}</td>
                                    {% endfor %}
                                </tr>
                            {% endfor %}
                            </tbody>
                            {#{% if admin.currentAction.configuration.exports | length %}#}
                                {#<tfoot>#}
                                {#<tr>#}
                                    {#<td colspan="{{ fields | length }}">#}
                                        {#{% for export in admin.currentAction.configuration.exports %}#}
                                            {#<a href="{{ appendToQueryString(app.request, 'export', export) }}">{{ export }}</a>#}
                                        {#{% endfor %}#}
                                    {#</td>#}
                                {#</tr>#}
                                {#</tfoot>#}
                            {#{% endif %}#}
                        </table>

                        {% if admin.pager.haveToPaginate %}
                            <div class="pagerfanta">
                                {{ pagerfanta(admin.pager, 'twitter_bootstrap3', {page: admin.pager.currentPage}) }}
                            </div>
                        {% endif %}
                        {{ form_rest(form) }}
                    </div>
                </form>
            {% endspaceless %}
        {% else %}
            No record yet
        {% endif %}
    </div>
{% endblock %}
