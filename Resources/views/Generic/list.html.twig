{% extends config.layout %}

{% block topMenuItems %}
    {% block leftList %}
        {% include 'BlueBearAdminBundle:Action:customActions.html.twig' %}
    {% endblock %}
{% endblock %}

{% block content %}
    <h1 class="page-header">{{ admin.currentAction.title | trans }}</h1>

    <div class="filters">
        {% include "BlueBearAdminBundle:Action:filters.html.twig" %}
    </div>
    <div class="{{ admin.name }}-list">
        {% if admin.entities | length > 0 %}
            {% set fields = admin.currentAction.fields %}
            {% spaceless %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-sort">
                        <thead>
                        <tr>
                            {% for field in fields %}
                                <th>
                                    {% set sortClass = getSortColumnIconClass(app.request.get('order'), field.name, app.request.get('sort')) %}

                                    <a href="{{ getSortColumnUrl(app.request, field.name) }}">
                                        {{ field_title(field.name, admin.name) }}<i class="{{ sortClass }}"></i>
                                    </a>
                                </th>
                            {% endfor %}
                            {% if admin.currentAction.fieldActions | length > 0 %}
                                <th>{# empty column for actions #}</th>
                            {% endif %}
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in admin.entities %}
                            <tr>
                                {% for field in fields %}
                                    <td>{{ field(field, entity) | raw }}</td>
                                {% endfor %}
                                <td class="actions">
                                    {% for action in admin.currentAction.fieldActions %}
                                        {{ action.buildParameters(entity) }}
                                        <a href="{{ path(action.route, action.parameters) }}">
                                            {% if action.icon %}
                                                <i class="fa fa-{{ action.icon }}"></i>
                                            {% endif %}
                                            {{ action.title | trans }}
                                        </a><br/>
                                    {% endfor %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                        {% if admin.currentAction.export | length %}
                            <tfoot>
                            <tr>
                                <td colspan="{{ fields | length }}">
                                    {% for export in admin.currentAction.export %}
                                        <a href="{{ appendToQueryString(app.request, 'export', export) }}">{{ export }}</a>
                                    {% endfor %}
                                </td>
                            </tr>
                            </tfoot>
                        {% endif %}
                    </table>

                    {% if admin.pager.haveToPaginate %}
                        <div class="pagerfanta">
                            {{ pagerfanta(admin.pager, 'twitter_bootstrap3', {page: admin.pager.currentPage}) }}
                        </div>
                    {% endif %}
                </div>
            {% endspaceless %}
        {% else %}
            No record yet
        {% endif %}
    </div>
{% endblock %}
