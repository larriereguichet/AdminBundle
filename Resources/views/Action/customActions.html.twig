{% if admin.currentAction.actions | length > 0 %}
    {% for action in admin.currentAction.actions %}
        <li class="{{ action.configuration.route == app.request.get('_route') ? 'active' : '' }}">
            {{ AdminBundle.actionLink(action, admin.entities.count == 1 ? admin.uniqueEntity : null) }}
        </li>
    {% endfor %}
{% endif %}
