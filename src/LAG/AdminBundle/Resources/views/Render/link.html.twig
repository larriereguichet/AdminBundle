{% spaceless %}
    {% if options.route %}
        {% set url = path(options.route, parameters) %}
    {% elseif not url %}
        {% set url = text %}
    {% endif %}

    <a href="{{ url }}"
       target="{{ options.target }}"
       class="{{ options.class }}"
       title="{{ options.title | trans }}">
        {# font awesome icons #}
        {% if options.icon %}<i class="fa fa-{{ options.icon }}"></i>&nbsp;{% endif %}{{ text | trans }}
    </a>

{% endspaceless %}
