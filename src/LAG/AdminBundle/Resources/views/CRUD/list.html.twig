{% extends config.getParameter('base_template') %}

{% block topMenuItems %}
    {% block leftList %}
        {% include 'LAGAdminBundle:Action:customActions.html.twig' %}
    {% endblock %}
{% endblock %}

{% block content %}
    <h1 class="page-header">{{ admin.currentAction.title | trans }}</h1>

    <div class="row">
        <div class="col-lg-6">
            {% include '@LAGAdmin/List/filters.html.twig' %}
        </div>

        {% if admin.pager and admin.pager.haveToPaginate %}
            <div class="col-lg-6">
                {% include '@LAGAdmin/List/pagination.html.twig' %}
            </div>
        {% endif %}
    </div>

    <div class="{{ admin.name }}-list admin-list">
        {% if admin.entities | length > 0 %}

            {% spaceless %}
                {% if form is defined %}
                    <form action="" method="post" class="selectable-list">
                    <div class="row">
                        <div class="col-lg-3">
                            {{ form_widget(form.actions) }}
                        </div>
                        <div class="col-lg-3">
                            <input type="submit"
                                   value="{{ 'lag.admin.mass_action' | trans }}"
                                   class="btn btn-default"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 text-danger">
                            {{ form_errors(form) }}
                        </div>
                    </div>
                {% endif %}

                <div class="table-responsive">
                    <table class="table table-striped table-hover table-sort">
                        {% if admin.pager %}
                            <caption>{{ admin.pager.nbResults }} elements</caption>
                        {% else %}
                            <caption>{{ admin.entities | length }} elements</caption>
                        {% endif %}
                        <thead>
                        <tr>
                            {% if form is defined %}
                                <th>
                                    {{ form_widget(form['selectAll']) }}
                                </th>
                            {% endif %}

                            {% for field in admin.currentAction.fields %}
                                <th>
                                    {% set sortClass = getSortColumnIconClass(app.request.get('order'), field.name, app.request.get('sort')) %}

                                    <a href="{{ getSortColumnUrl(app.request, field.name) }}">
                                        {{ field_title(field.name, admin.name) }}<i class="{{ sortClass }}"></i>
                                    </a>
                                </th>
                            {% endfor %}
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in admin.entities %}
                            <tr>
                                {% if form is defined %}
                                    <td class="batch-column">
                                        {{ form_widget(form.entities[entity.id]) }}
                                    </td>
                                {% endif %}

                                {% for field in admin.currentAction.fields %}
                                    <td>{{ field(field, entity) | raw }}</td>
                                {% endfor %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    {% if form is defined %}
                        {{ form_rest(form) }}
                    {% endif %}
                </div>
                </form>

                {% if admin.pager and admin.pager.haveToPaginate %}
                    <div class="row">
                        <div class="col-lg-6 col-lg-offset-6">
                            {% include '@LAGAdmin/List/pagination.html.twig' %}
                        </div>
                    </div>
                {% endif %}
            {% endspaceless %}
        {% else %}
            <p>No record yet</p>
        {% endif %}
    </div>
{% endblock %}
