{% extends admin.base %}

{% block content %}
    {% include '@LAGAdmin/CRUD/_title.html.twig' %}

    {% block filterLink %}
        <a href="#filters-container"
           class="link-toggle"
           data-alternate-text="{{ 'lag.admin.hide_filter' | trans }}"
           data-alternate-icon="fa fa-angle-up">
            {{ 'lag.admin.show_filter' | trans }}
            <i class="fa fa-angle-down"></i>
        </a>
    {% endblock %}

    {% block filters %}
        {% include '@LAGAdmin/CRUD/list/_filters.html.twig' with {form: admin.forms.filter} %}
    {% endblock %}

    {% block top_extra_content %}{% endblock %}

    {% block table %}

        {% if admin.entities | length %}
            <table class="table">
                {% block table_head %}
                    <thead>
                    <tr>
                        {% for field in admin.fields %}
                            {% include '@LAGAdmin/CRUD/list/_header.html.twig' %}
                        {% endfor %}
                    </tr>
                    </thead>
                {% endblock %}

                {% block table_body %}
                    <tbody>
                    {% for entity in admin.entities %}
                        <tr>
                            {% for field in admin.fields %}
                                <td>
                                    {{ admin_field(field, entity) | raw }}
                                </td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                    </tbody>
                {% endblock %}
                <tfoot>
                </tfoot>
            </table>
        {% else %}
            <p>{{ 'lag.admin.no_record' | trans }}</p>
        {% endif %}
    {% endblock %}

    {% block pagination %}
        <div>
            {% if admin.pager %}
                {{ pagerfanta(admin.pager, 'twitter_bootstrap4', {page: admin.pager.currentPage}) }}
            {% endif %}
        </div>
    {% endblock %}

    {% block bottom_extra_content %}{% endblock %}
{% endblock %}
