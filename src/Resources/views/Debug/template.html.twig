{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block toolbar %}
    {% set icon %}
        <div class="sf-toolbar-icon">
            {{ include('@LAGAdmin/Debug/icon.svg') }}
            <span class="sf-toolbar-value">
                Admin
            </span>
        </div>
    {% endset %}

    {% set text %}
        <b>Application</b>

        <div class="sf-toolbar-info-piece">
            <b>Locale</b>
            <span class="sf-toolbar-status">
                {{ collector.data.application.locale }}
            </span>
        </div>
        <div class="sf-toolbar-info-piece">
            <b>Pagination</b>
            <span class="sf-toolbar-status">
                {{ collector.data.application.pager ?: 'false' }}
            </span>
        </div>
        <br>
        <div class="sf-toolbar-info-piece">
            <b>Translation</b>
            <span>
                {{ collector.data.application.translation ?: 'false' }}<br>
            </span>
        </div>
        <hr>
        <b>Admins</b>

        {% for name, admin in collector.data.admins %}
            <div class="sf-toolbar-info-piece">
                <b>{{ name | capitalize }}</b>
                <span class="sf-toolbar-status ">
                    {{ admin.entity_class }}
                </span>
            </div>
        {% endfor %}

    {% endset %}

    {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', { 'link': true }) }}
{% endblock %}

{% block menu %}
    <span class="label">
        <span class="icon">
            {{ include('@LAGAdmin/Debug/icon.svg') }}
        </span>
        <strong>Admin</strong>
    </span>
{% endblock %}

{% block panel %}
    <script
        src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha256-3edrmyuQ0w65f8gfBsqowzjJe2iM6n0nKciPUp8y+7E="
        crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $('.tab-navigation li a').on('click', function () {
                let targetSelector = $(this).attr('href');
                $('.tabs .tab').hide();
                $(targetSelector).show();
                $('.tab-navigation li').removeClass('active');
                $(this).parents('li').addClass('active');

                return false;
            });

            $('.toggle-icon').on('click', function () {
                $(this).toggleClass('closed');

                $(this).parent().next('table').toggleClass('hidden');
            });
        });
    </script>
    <style>
        .tab {
            display: none;
        }

        .tab.active {
            display: block;
        }
        table tbody tr td:first-child {
            font-weight: bold;
        }
        .toggle-icon {
            background: url("data:image/png;base64,") no-repeat top left #5eb5e0;
            cursor: pointer;
            display: inline-block;
            height: 16px;
            width: 16px;
        }
        .closed .toggle-icon, .closed.toggle-icon {
            background-position: bottom left;
        }
    </style>

    <ul class="tab-navigation">
        <li class="active">
            <a href="#tab-admins">Admins</a>
        </li>
        <li>
            <a href="#tab-application">Application</a>
        </li>
        <li>
            <a href="#tab-menus">Menus</a>
        </li>
    </ul>

    <div class="tabs">
        <div id="tab-admins"
             class="tab">
            <h1>Admins</h1>

            {% for name, admin in collector.data.admins %}
                <h3>{{ name | capitalize }} ({{ name }})</h3>
                <table>
                    <thead>
                    <tr>
                        <th class="key">Key</th>
                        <th scope="col">Value</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>{{ name }}</td>
                        <td>{{ admin.entity_class }}</td>
                    </tr>
                    </tbody>
                </table>

                {% for actionName, action in admin.configuration.actions %}
                    <h4>{{ actionName }}</h4>
                    <table>
                        <thead>
                        <tr>
                            <th class="key">Key</th>
                            <th scope="col">Value</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for key, value in action %}
                            <tr>

                                <td>{{ key }}</td>
                                <td>
                                    {% if value is iterable %}
                                        {{ dump(value) }}
                                    {% else %}
                                        {{ value }}
                                    {% endif %}
                                </td>

                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% endfor %}
            {% endfor %}
        </div>
        {% include '@LAGAdmin/Debug/_applications.html.twig' %}
        <div id="tab-menus"
             class="tab">
            <h1>Menus</h1>

            {% for name, menu in collector.data.menus %}
                <h2>
                    Menu "{{ name }}"
                    <span class="toggle-icon"></span>
                </h2>

                <table>
                    <thead>
                    <tr>
                        <th class="key">Key</th>
                        <th class="col">Value</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>Items :</td>
                    </tr>
                    {% for name, item in menu.items %}
                        {% set configuration = item.configuration.getParameters() %}
                        <tr>
                            <td>Name</td>
                            <td>{{ name }}</td>
                        </tr>
                        <tr>
                            <td>Route/Url</td>
                            <td>{{ configuration.route | default(configuration.url | default('null')) }}</td>
                        </tr>
                        <tr>
                            <td>Admin/Action</td>
                            <td>
                                {{ configuration.admin | default('null')
                                    ~ '/' ~
                                    configuration.action | default('null') }}
                            </td>
                        </tr>
                        <tr>
                            <td>Text</td>
                            <td>{{ configuration.text }}</td>
                        </tr>
                        <tr>
                            <td>--------------</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            {% endfor %}
        </div>
    </div>

{% endblock %}
