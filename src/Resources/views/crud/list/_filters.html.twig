<div class=""
     id="">
    <div class="card card-body">
        {{ form_start(form) }}
            <h2>{{ 'lag.admin.filter' | trans }}</h2>

            {{ form_errors(form) }}

            <div class="row">
                {% for child in form %}
                        <div class="col">
                            {{ form_label(child) }}
                            {{ form_widget(child) }}
                        </div>
                        {% if loop.index is divisible by (2) %}
                            </div>
                            <div class="row">
                        {% endif %}
                {% endfor %}
            </div>

            <div class="text-right btn-group"
                 role="group">
                <a href="{{ admin_url(admin.name, 'list') }}"
                   class="btn btn-secondary">
                    <i class="fas fa-eraser"></i>
                    {{ 'lag.admin.reset_filters' | trans }}
                </a>
                <button type="submit"
                        class="btn btn-success">
                    {{ 'lag.admin.filter' | trans }}
                    <i class="fas fa-filter"></i>
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
