<!doctype html>
<html lang="{{ admin_config('locale') }}">
<head>
    <title>
        {% block title %}{{ admin_config('title') }}{% endblock %}
    </title>
    {% block meta %}
        <meta charset="utf-8"/>
        <meta http-equiv="X-UA-Compatible"
              content="IE=edge"/>
        <meta name="viewport"
              content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
        <meta name="description"
              content="{{ admin_config('description') }}"/>
    {% endblock %}

    {% block stylesheets %}
        {% if admin_config('bootstrap') %}
            <link rel="stylesheet"
                  href="{{ asset('/bundles/lagadmin/assets/admin.css') }}">
        {% endif %}
    {% endblock %}

    {% block custom_stylesheets %}{% endblock %}

    {% block head_javascripts %}
        {{ admin_dump_scripts('head') | raw }}
    {% endblock %}

    {% block head %}{% endblock %}
</head>

{% block body %}
    {% set admin = admin|default(null) %}

    <body>
    {% block navbar %}
        {% include '@LAGAdmin/Layout/header.html.twig' %}
    {% endblock %}

    {% block container %}
        <div id="admin-main-container"
             class="container-fluid">
            <div class="row">
                {% block layout %}
                    {% block left_menu %}
                        <nav class="col-2 d-none d-md-block sidebar">
                            {{ knp_menu_render('left') }}
                        </nav>
                    {% endblock %}

                    {% block content_container %}
                        <main class="col-10 content-container"
                              role="main">

                            {% block flash_messages %}
                                {% include "@LAGAdmin/Layout/flash_messages.html.twig" %}
                            {% endblock %}

                            {% block content %}{% endblock %}
                        </main>
                    {% endblock %}
                {% endblock %}
            </div>
        </div>
    {% endblock %}

    {% block footer %}
        <footer>
            {% block admin_javascripts %}
                <script src="{{ asset('/bundles/lagadmin/assets/admin.js') }}"></script>

                {# Inject scripts in footer section #}
                {{ admin_dump_scripts('footer') | raw }}
            {% endblock %}
            {% block javascripts %}{% endblock %}
        </footer>
    {% endblock %}
    </body>
{% endblock %}
</html>

