<!doctype html>
<html lang="{{ app.request.locale }}">
<head>
    <title>
        {% block title %}{{ admin_config('title') }}{% endblock %}
    </title>
    {% block meta %}
        <meta charset="utf-8"/>
        <meta http-equiv="X-UA-Compatible"
              content="IE=edge"/>
        <meta name="viewport"
              content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
        <meta name="description"
              content="{{ admin_config('description') }}"/>
    {% endblock %}
    
    {% block favicon %}
        <link rel="shortcut icon"
              href="{{ asset('/bundles/lagadmin/favicon.ico') }}"
              type="image/x-icon">
        <link rel="icon"
              href="{{ asset('/bundles/lagadmin/favicon.ico') }}"
              type="image/x-icon">
    {% endblock %}
    
    {% block admin_stylesheets %}
        <link rel="stylesheet" href="{{ asset('/bundles/lagadmin/sb-admin-css.css') }}"/>
        <link rel="stylesheet" href="{{ asset('/bundles/lagadmin/fa.css') }}"/>
        <link rel="stylesheet" href="{{ asset('/bundles/lagadmin/admin.css') }}"/>
    
        {% if admin_media_enabled() %}
            <link rel="stylesheet" href="{{ asset('/bundles/jkmedia/assets/media.css') }}"/>
        {% endif %}

        {# TODO #}
{#        <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />#}
    {% endblock %}
    
    {% block stylesheets %}{% endblock %}
    {% block head_javascripts %}{% endblock %}
    
    {% block head %}{% endblock %}
</head>

{% block body %}
    <body id="page-top">
    {% block wrapper %}
    <div id="wrapper">
        {% block sidebar %}
            <div id="accordionSidebar" class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion">
                {% include '@LAGAdmin/layout/sidebar.html.twig' %}
            </div>
        {% endblock %}
        
        {% block content_wrapper %}
            <div id="content-wrapper" class="d-flex flex-column">
                <div id="content">
                    {% block header %}
                        {% include '@LAGAdmin/layout/header.html.twig' %}
                    {% endblock %}
                    
                    {% block container %}
                        <div class="container-fluid">
                            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                                {% block page_title %}{% endblock %}
                            </div>
                            {% block flash_messages %}{% include '@LAGAdmin/layout/flash_messages.html.twig' %}{% endblock %}
                            {% block content %}{% endblock %}
                        </div>
                    {% endblock %}
                </div>
            </div>
        {% endblock %}
    </div>
    {% endblock %}
    
    {% block footer %}{% endblock %}

    {% block admin_javascripts %}
        {% if admin_media_enabled() %}
        {# Media js should always be called before the admin js to preserve tinymce media working #}
        <script src="{{ asset('/bundles/jkmedia/assets/media.js') }}"></script>
        {% endif %}
        <script src="{{ asset('/bundles/lagadmin/jquery.js') }}"></script>
        <script src="{{ asset('/bundles/lagadmin/jquery-easing.js') }}"></script>
        <script src="{{ asset('/bundles/lagadmin/bootstrap.js') }}"></script>
        <script src="{{ asset('/bundles/lagadmin/sb-admin.js') }}"></script>
        <script src="{{ asset('/bundles/lagadmin/admin.js') }}"></script>
    {% endblock %}

    {% block javascripts %}{% endblock %}

    {% block modal %}
        {% include '@LAGAdmin/modal/modal.html.twig' %}
    {% endblock %}

    {% if admin_media_enabled() %}
        {% include '@JKMedia/Modal/modal.html.twig' %}
    {% endif %}
    </body>
{% endblock %}
</html>

